{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Game Launcher",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.example.gamelauncher",
      "targets": ["nsis"]
    },
    "windows": [
      {
        "title": "Game Launcher",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "allowlist": {
      "all": false,
      "dialog": { "open": true, "message": true, "ask": true, "confirm": true },
      "fs": {
        "readDir": true,
        "readFile": true,
        "exists": true,
        "scope": ["**"]  
      },
      "path": { "all": true },
      "shell": { "open": true }
    }
  }
}
